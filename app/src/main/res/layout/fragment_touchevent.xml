          <singerstone.com.superapp.TouchEvent.TouchEventView
                android:id="@+id/t_view"
              android:background="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="90dp" />

    </singerstone.com.superapp.TouchEvent.EventViewGroup>

</LinearLayout>