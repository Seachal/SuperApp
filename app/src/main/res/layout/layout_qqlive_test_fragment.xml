<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_nickname_yellow"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_add_shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加快捷方式" />

    <Button
        android:id="@+id/btn_find_shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询快捷方式" />

    <Button
        android:id="@+id/btn_remove_shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除快捷方式" />

    <Button
        android:id="@+id/btn_add_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加日历" />

    <Button
        android:id="@+id/btn_remove_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除日历" />

    <Button
        android:id="@+id/btn_get_clipboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="0dp"
        android:text="获取剪切板" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/v_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/orange"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bangbangtang" />

        <TextView
            android:id="@+id/message_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长"
            android:textSize="18sp" />
    </RelativeLayout>

    <singerstone.com.superapp.flowtext.FlowTextView
        android:id="@+id/ftv"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dip"
            android:src="@mipmap/bangbangtang" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="这是标题"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:maxLines="4"
            android:ellipsize="end"
            android:text=""
            android:layout_toRightOf="@id/image"
            android:textStyle="bold" />


    </singerstone.com.superapp.flowtext.FlowTextView>
    <singerstone.com.superapp.qqlive.RetractableTextView
        android:id="@+id/rtt"
        app:isRecover="false"
        app:showMaxLines="2"
        app:drawableToggle="@drawable/load_more_arrow_down"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </singerstone.com.superapp.qqlive.RetractableTextView>
</LinearLayout>